<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    
    <parameters>
        <parameter key="helper.registration.class">Sio\UserBundle\Service\HelperRegistration</parameter>
    </parameters>
    
    <services>
        <service id="helper.registration" class="%helper.registration.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="security.context" />
            <argument type="service" id="request_stack"/>
            
        </service>
    
        <service id="sio_user.registration.form.type" class="Sio\UserBundle\Form\Type\RegistrationFormType">
            <argument type="service" id="service_container" />
            <tag name="form.type" alias="sio_user_registration" />
        </service>

        <!-- service id="sio_user.profile.form.type" class="Sio\UserBundle\Form\Type\ProfileFormType">
          <argument>%fos_user.model.user.class%</argument> 
          <tag name="form.type" alias="sio_user_profile" />
        </service -->

        <service id="sio.user_provider.email" class="Sio\UserBundle\Security\EmailProvider">
             <argument type="service" id="fos_user.user_manager"/>
        </service>
    
    </services>
    
