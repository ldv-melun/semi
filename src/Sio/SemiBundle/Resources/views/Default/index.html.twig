{% extends "SioSemiBundle::layout.html.twig" %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="thumbnail" style="background-color:#337AB7;padding-left:2em;padding-right:2em;padding-bottom:1em;color:white;">
                    <div id="login-register-label"><h2>Inscription</h2></div>
                    <hr>
                    
                    <div id="login-register-form">
                        <form action="register" method="post">
                            <div class="input-group">
                                <span class="input-group-addon" id="basic-addon1">></span>
                                <input type="text" name="mail" class="form-control" placeholder="E-Mail" aria-describedby="basic-addon1"><br>
                            </div>
                            <div class="input-group">
                                <span class="input-group-addon" id="basic-addon">></span>
                                <input type="text" name="key" class="form-control" placeholder="Clé d'inscription *" aria-describedby="basic-addon2">
                            </div>
                            <input type="submit" class="btn btn-sm btn-success" style="width:100%;" value="S'enregistrer">
                        </form>
                    </div>
                    
                    <hr>
                    
                        <table style="width:100%;">
                            <tr>
                                <td style="width:50%;margin:auto;">
                                    <div id="login-register-help" class="col-md-12" style="text-align:right;">
                                        <p class="help">* Une clé d'inscription à un séminaire est nécessaire pour s'enregistrer.</p>
                                    </div>
                                </td>
                                <td>
                                    <div id="login-register-switchLabel">
                                        <p class="connexion" onClick="showLogin();">... Ou cliquez ici pour vous connecter !</p>
                                    </div>
                                </td>
                        
                        </table>
                    

            </div>
        </div>
        
    </div>
    
    <div class="row">
        <div class="col-md-12">
            <center><h2>Description de l'application</h2></center>
            <hr>
