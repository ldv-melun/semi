{% block head %}
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Projet Semi">
    <meta name="author" content="Lycée de Léonard de Vinci">
    <link rel="icon" href="../../favicon.ico">

    <title>{{ projectName }}</title>

    <!-- Bootstrap core CSS -->
    <link href="{{ asset('bundles/siosemi/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/siosemi/css/custom.css') }}" rel="stylesheet">

    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
{% endblock %}

{% block body %}
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            {% include "SioSemiBundle::menu.html.twig" %}
        </div>
    </nav>
    
    <div class="jumbotron">
        <div class="container">
            <br><br>
            <center>
                <h1>{{ projectName }}</h1><br>
                <i>{{ slogan }}</i>
            </center>
        </div>
    </div>
    <div class="container">
        
        {% for type, flashMessages in app.session.flashbag.all() %}
            {% for flashMessage in flashMessages %}
                <div class="alert alert-{{ type }}" role="alert">
                    {{ flashMessage }}
                </div>
            {% endfor %}
        {% endfor %}
        
        {% block content %}{% endblock %}
        <hr>
        
        <footer>
            <p><center>Projet SioSemi &copy; Léonard de Vinci 2012-{{ "now"|date('Y') }}<br><br>
                <small><small>Le Projet SioSemi a été lancé par le lycée de Léonard de Vinci (Melun) en 2012. Il s'agit d'une application de gestion d'inscriptions/réservations à des séances de séminaires.<br>
                        Vous pouvez retrouver le développement du projet en <a href="https://github.com/sio-melun/semi" target="_blank">cliquant ici</a>.</small></small></center></p>
        </footer>
    </div>
        
    <script type="text/javascript" src="{{ asset('bundles/siosemi/js/jquery-2.1.3.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/siosemi/js/bootstrap.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/siosemi/js/custom.js') }}"></script>
{% endblock %}